{
  "compilerOptions": {
    "target": "es2017",
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "jest",
      "lodash",
      "node",
      "react",
      "react-burger-menu",
      "react-dom",
      "react-modal",
      "react-redux",
      "react-router-dom",
      "react-router-hash-link",
      "styled-components",
      "yup"
    ]
  },
  "include": ["src"]
}
